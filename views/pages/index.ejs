                            >
                                <div class="searchIcon">
                                    <i class="fa fa-search"></i>
                                </div>
                                <input
                                    class="form-control"
                                    type="search"
                                    name="search"
                                    id="search"
                                    placeholder="Search"
                                />
                            </form>
                            <div class="d-flex p-3">
